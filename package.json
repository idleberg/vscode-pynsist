{
    "name": "pynsist",
    "displayName": "pynsist",
    "description": "Language support, snippets and build-system for pynsist, a tool to build Windows installers for your Python applications",
    "version": "0.8.0",
    "publisher": "idleberg",
    "license": "MIT OR GPL-2.0",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "main": "./lib/extension",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --mode none --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "vscode-linter",
        "vscode:prepublish": "webpack --mode production && gulp"
    },
    "keywords": [
        "nsis",
        "pynsist",
        "python"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/vscode-pynsist"
    },
    "homepage": "https://github.com/idleberg/vscode-pynsist#readme",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-pynsist/issues"
    },
    "dependencies": {
        "open": "^6.0.0"
    },
    "devDependencies": {
        "@types/node": "^12.0.12",
        "babel-core": "^6.26.3",
        "babel-preset-es2015": "^6.24.1",
        "gulp": "^4.0.2",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^1.4.0",
        "husky": "^3.0.0",
        "ts-loader": "^6.0.2",
        "tslint": "^5.18.0",
        "typescript": "^3.1.6",
        "vscode": "^1.1.35",
        "vscode-linter": "^0.2.2",
        "webpack": "^4.33.0",
        "webpack-cli": "^3.3.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test"
        }
    },
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#323232",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:pynsist"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "pynsist",
            "properties": {
                "pynsist.pathToPynsist": {
                    "type": "string",
                    "default": null,
                    "description": "Specify the full path to `pynsist`"
                },
                "pynsist.showNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show build notifications indicating success or failure"
                },
                "pynsist.alwaysOpenBuildTask": {
                    "type": "boolean",
                    "default": true,
                    "description": "Specify whether to open the newly created build task"
                },
                "pynsist.alwaysShowOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "If `false` the output channel will only be shown on errors"
                },
                "pynsist.useWineToRun": {
                    "type": "boolean",
                    "default": false,
                    "description": "Specify whether to run compiled installers using Wine - https://www.winehq.org/"
                }
            }
        },
        "languages": [
            {
                "id": "pynsist",
                "aliases": [
                    "Pynsist Configuration",
                    "Pynsist"
                ],
                "extensions": [
                    "installer.cfg"
                ],
                "configuration": "./config/pynsist.json"
            }
        ],
        "grammars": [
            {
                "language": "pynsist",
                "scopeName": "source.cfg.pynsist",
                "path": "./syntaxes/pynsist.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "extension.pynsist.generate",
                "title": "pynsist: Generate Script",
                "icon": {
                    "dark": "./images/icon--script-dark.svg",
                    "light": "./images/icon--script-light.svg"
                }
            },
            {
                "command": "extension.pynsist.compile",
                "title": "pynsist: Compile Installer",
                "icon": {
                    "dark": "./images/icon--installer-dark.svg",
                    "light": "./images/icon--installer-light.svg"
                }
            },
            {
                "command": "extension.pynsist.create-build-task",
                "title": "pynsist: Create Build Task"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == pynsist",
                    "command": "extension.pynsist.compile",
                    "group": "navigation@1"
                },
                {
                    "when": "resourceLangId == pynsist",
                    "command": "extension.pynsist.generate",
                    "group": "navigation@2"
                }
            ]
        },
        "snippets": [
            {
                "language": "pynsist",
                "path": "./snippets/nsis.json"
            },
            {
                "language": "pynsist",
                "path": "./snippets/pynsist.json"
            }
        ]
    },
    "babel": {
        "presets": [
            "es2015"
        ]
    }
}
