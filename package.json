{
	"name": "pynsist",
	"displayName": "pynsist",
	"description": "Language support, snippets and build-system for pynsist, a tool to build Windows installers for your Python applications",
	"version": "0.14.1",
	"publisher": "idleberg",
	"license": "MIT",
	"author": {
		"name": "Jan T. Sott",
		"url": "http://github.com/idleberg"
	},
	"main": "./lib/index.cjs",
	"scripts": {
		"compile": "npm run build",
		"build": "concurrently --prefix-colors 'blue,green' 'npm:build:*'",
		"build:code": "tsdown",
		"build:image": "sharp resize 1024 1024 --input src/logo.svg --output resources/logo.png",
		"dev": "npm run start",
		"lint": "biome check",
		"publish:ovsx": "ovsx publish --no-dependencies",
		"publish:vsce": "vsce publish --githubBranch main --no-dependencies",
		"start": "npm run build:code -- --watch",
		"test": "echo \"no tests yet\" && exit 0",
		"vscode:prepublish": "npm run build"
	},
	"keywords": [
		"nsis",
		"pynsist",
		"python"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/vscode-pynsist"
	},
	"homepage": "https://github.com/idleberg/vscode-pynsist#readme",
	"bugs": {
		"url": "https://github.com/idleberg/vscode-pynsist/issues"
	},
	"sponsor": {
		"url": "https://buymeacoffee.com/idleberg"
	},
	"dependencies": {
		"open": "^11.0.0",
		"vscode-get-config": "^0.6.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.2",
		"@commitlint/config-conventional": "^20.4.2",
		"@idleberg/configs": "^0.4.2",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^20.14.2",
		"@types/vscode": "1.85.0",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"lefthook": "^2.1.1",
		"sharp-cli": "^5.2.0",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"icon": "resources/logo.png",
	"galleryBanner": {
		"color": "#323232",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "pynsist",
			"properties": {
				"pynsist.pathToPynsist": {
					"type": "string",
					"default": "",
					"markdownDescription": "%pynsistPathToPynsist%",
					"order": 1
				},
				"pynsist.showNotifications": {
					"type": "boolean",
					"default": true,
					"description": "Show build notifications indicating success or failure",
					"order": 2
				},
				"pynsist.alwaysOpenBuildTask": {
					"type": "boolean",
					"default": true,
					"description": "Specify whether to open the newly created build task",
					"order": 3
				},
				"pynsist.alwaysShowOutput": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "%pynsistAlwaysShowOutput%",
					"order": 4
				},
				"pynsist.useWineToRun": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "%pynsistUseWineToRun%",
					"order": 5
				}
			}
		},
		"languages": [
			{
				"id": "pynsist",
				"aliases": [
					"Pynsist Configuration",
					"Pynsist"
				],
				"extensions": [
					"installer.cfg"
				],
				"configuration": "./config/pynsist.json"
			}
		],
		"grammars": [
			{
				"language": "pynsist",
				"scopeName": "source.cfg.pynsist",
				"path": "./syntaxes/pynsist.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "extension.pynsist.generate",
				"title": "pynsist: Generate Script",
				"icon": "$(run)"
			},
			{
				"command": "extension.pynsist.compile",
				"title": "pynsist: Compile Installer",
				"icon": "$(run-all)"
			},
			{
				"command": "extension.pynsist.createBuildTask",
				"title": "pynsist: Create Build Task",
				"icon": "$(checklist)"
			},

			{
				"command": "extension.pynsist.open-settings",
				"title": "pynsist: Open Settings",
				"icon": "$(settings)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == pynsist",
					"command": "extension.pynsist.generate",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == pynsist",
					"command": "extension.pynsist.compile",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == pynsist",
					"command": "extension.pynsist.createBuildTask",
					"group": "navigation@3"
				},
				{
					"when": "resourceLangId == pynsist",
					"command": "extension.pynsist.open-settings",
					"group": "navigation@4"
				}
			]
		},
		"snippets": [
			{
				"language": "pynsist",
				"path": "./snippets/nsis.json"
			},
			{
				"language": "pynsist",
				"path": "./snippets/pynsist.json"
			}
		]
	},
	"extensionDependencies": [
		"idleberg.nsis"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a"
}
